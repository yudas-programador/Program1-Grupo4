@{
    ViewBag.Title = "Home Page";
}

@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .footer-info {
            display: none;
        }

        header {
            background-image: url('../../content/pictures/imagenfondo3.jpeg');
            background-size: cover;
            background-repeat: no-repeat;
            height: 100vh;
            background-position: center center;
        }


        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .botones-izquierda {
            float: left;
        }

            .botones-izquierda a {
                margin-right: 10px;
                padding: 5px 10px;
                border: 1px solid #ddd;
                border-radius: 5px;
                text-decoration: none;
                color: #333;
                background-color: #000;
                color: #fff;
            }

                .botones-izquierda a:hover {
                    background-color: #f0f0f0;
                }

        nav {
            float: left;
            margin-left: 20px;
        }

            nav ul {
                list-style: none;
                margin: 0;
                padding: 0;
            }

                nav ul li {
                    display: inline-block;
                    margin-right: 10px;
                }

                    nav ul li a {
                        padding: 5px 10px;
                        text-decoration: none;
                        color: #333;
                    }

                        nav ul li a:hover {
                            background-color: #f0f0f0;
                        }

        .buscador {
            float: right;
            width: 50%;
        }

            .buscador form {
                display: inline-block;
            }

            .buscador input {
                padding: 5px 10px;
                border: 1px solid #ddd;
                border-radius: 5px;
            }

            .buscador button {
                padding: 5px 10px;
                border: 1px solid #ddd;
                border-radius: 5px;
                width: 50%;
            }

        .imagen-derecha img {
            width: 150px;
            height: auto;
        }

        .imagen-derecha {
            display: inline-block;
            vertical-align: top;
        }

        .buscador-contenedor {
            display: flex;
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div class="botones-izquierda">
                <a href="@Url.Action("Login", "Seguridad")">Iniciar sesión</a>
                <a href="@Url.Action("Registro", "Seguridad")">Crear cuenta</a>
            </div>
            <nav>
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">Usuario Provedores</a></li>
                    <li><a href="@Url.Action("Destinos", "Destino")">Destinos</a></li>
                    <li><a href="@Url.Action("QueHacer", "Actividad")">Qué hacer</a></li>
                    <li><a href="@Url.Action("Index", "Hospedaje")">Hospedaje</a></li>
                    <li><a href="@Url.Action("PlaneaTuViaje", "PlanViaje")">Planea tu viaje</a></li>
                </ul>
            </nav>
            <div class="buscador-contenedor">
                <div class="buscador">
                    <form action="@Url.Action("Buscar", "Destino")">
                        <input type="text" name="terminoBusqueda" placeholder="Buscar">
                        <button type="submit">Buscar</button>
                    </form>
                    <div class="imagen-derecha">
                        <img src="~/Content/Pictures/headerlogo.jpeg" />
                    </div>
                </div>
            </div>
        </div>
    </header>
</body>
</html>